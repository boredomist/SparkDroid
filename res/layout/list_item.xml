<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="vertical">

		<TextView android:id="@+id/book_name" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="16sp"
			android:textColor="#fff">
		</TextView>

		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/book_author"
			android:text="Name" android:textColor="#555" android:textSize="16sp"></TextView>
	</LinearLayout>


	<ImageView android:layout_width="wrap_content" android:id="@+id/image_is_cached"
		android:layout_height="wrap_content" android:layout_alignParentRight="true">
	</ImageView>

</RelativeLayout>